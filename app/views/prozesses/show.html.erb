<!--Visualisieren der Abhängigen, bisherig zugehörigen Prozesse -->
<h3>Sollprozesse:</h3>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Istprozess</th>
    <th>Abletoviernull</th>
    <th>Statusprozess</th>
    <th>Bestsolution</th>
    <th>Istproz</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>

<% if @prozess.sollproz.present? %>

    <%= @prozess.sollproz.each do|soll| %>

        <tr>
          <td><%= soll.title %></td>
          <td><%= soll.description %></td>
          <td><%= soll.istprozess %></td>
          <td><%= soll.abletoviernull %></td>
          <td><%= soll.statusprozess %></td>
          <td><%= soll.bestsolution %></td>
          <td><%=soll.istproz %></td>
          <td><%= link_to 'Show', soll %></td>
          <td><%= link_to 'Editieren', edit_prozess_path(soll.id)  %></td>

        </tr>
    <% end %>
    </tbody>
    </table>

<% else %>
    <h4>Keine Sollprozesse verfügbar!</h4>
<% end %>

<%= link_to 'Edit', edit_prozess_path(@prozess) %> |
<%= link_to 'Back', prozesses_path %>
